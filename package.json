{
  "name": "gw2-account-manager",
  "private": true,
  "version": "0.3.7",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "node scripts/dev-entry.mjs",
    "dev:update": "cross-env GW2AM_DEV_FAKE_UPDATE=1 GW2AM_DEV_FAKE_WHATS_NEW=1 npm run dev",
    "dev:showcase": "cross-env GW2AM_DEV_SHOWCASE=1 GW2AM_DEV_FAKE_WHATS_NEW=1 npm run dev",
    "dev:birthday": "cross-env VITE_FORCE_BIRTHDAY=1 npm run dev",
    "dev:web": "vite",
    "build": "tsc && vite build",
    "build:linux": "npm run build:electron && vite build && electron-builder --linux",
    "build:win": "npm run build:electron && vite build && electron-builder --win",
    "build:all": "npm run build:electron && vite build && electron-builder --linux --win",
    "build:github": "node scripts/build-github.mjs",
    "generate:release-notes": "node scripts/generate-release-notes.mjs",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build:electron": "tsc -p tsconfig.electron.json",
    "electron:build": "npm run build:electron && vite build && electron-builder"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.7.3",
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "remark-gfm": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.gw2am.app",
    "productName": "GW2 Account Manager",
    "directories": {
      "output": "dist_out",
      "buildResources": "build"
    },
    "artifactName": "GW2AM-${version}-${os}-${arch}.${ext}",
    "publish": {
      "provider": "github",
      "owner": "darkharasho",
      "repo": "GW2AM",
      "releaseType": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json",
      "README.md",
      "RELEASE_NOTES.md"
    ],
    "linux": {
      "target": "AppImage",
      "category": "Game",
      "icon": "build/icons/icon.png"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icons/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "differentialPackage": true
    }
  }
}
